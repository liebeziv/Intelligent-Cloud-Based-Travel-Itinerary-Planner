# Database Configuration
# Primary (production): DynamoDB is used in this project. Set these to your deployed table names.
DYNAMODB_USERS_TABLE=trip-planner-users-<account-id>
DYNAMODB_ITINERARIES_TABLE=trip-planner-itineraries-<account-id>
# Optional (development): MongoDB/Redis are supported for local dev only. Leave unset for production.
MONGODB_URL=mongodb://localhost:27017/travelplanner
REDIS_URL=redis://localhost:6379

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=travel-planner-assets

# External APIs
OPENWEATHER_API_KEY=your-openweather-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# Comma-separated public dataset URLs (CSV/GeoJSON) to load on startup
OPEN_DATA_SOURCES=

# Security / Encryption
ENCRYPTION_KEY=change-me
USE_SECRETS_MANAGER=false

# Application Settings
DEBUG=True
CORS_ORIGINS=["http://localhost:3000"]

