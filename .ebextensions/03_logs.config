option_settings:
  aws:elasticbeanstalk:cloudwatch:logs:
    StreamLogs: true
    DeleteOnTerminate: false
    RetentionInDays: 30
files:
  "/opt/elasticbeanstalk/tasks/bundlelogs.d/app-logs.conf":
    mode: "000755"
    owner: root
    group: root
    content: |
      /var/app/current/logs/*.log
      /var/log/app/*.log
